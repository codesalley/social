<div class="modal fade" id="album" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Create An Album</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <%= form_with(model: Album.new, url: albums_path) do |f| %>
          <div class="form-floating mb-3">
            <%= f.text_field :name, class:'form-control', id:"floatingname", placeholder:"Album name"%>
            <label for="floatingname">Album Name</label>
          </div>
          <div class="form-check form-switch mb-3">
            <%= f.check_box(:public, { class:'form-check-input'}, true, false) %>
            <label class="form-check-label" for="public">Public Album</label>
          </div>
          <div class="fform-floating mb-3">
            <%= f.submit 'Create Album', class: 'btn btn-outline-success' %>
          </div>
        <% end %>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
      </div>
    </div>
  </div>
</div>
