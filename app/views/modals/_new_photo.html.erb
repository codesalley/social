<div class="modal fade" id="photo" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Add New Picture</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <%= form_with() do |f| %>
          <div class="form-group mb-3">
            <%= f.collection_select :album_id, Album.order(:name),:id, :name, {include_blank: false}, { class:'form-select form-select-md'} %>
          </div>
          <div class="input-group mb-3">
            <%= f.file_field :image, class:'form-control' %>
            <label class="input-group-text" for="pictures">Upload</label>
          </div>
          <div class="input-group mb-3">
            <%= f.submit 'Add Photo', class: 'btn btn-outline-secondary' %>
          </div>
        <% end %>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
        <button type="button" class="btn btn-primary">Save changes</button>
      </div>
    </div>
  </div>
</div>
